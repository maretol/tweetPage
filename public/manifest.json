{
    "name": "post this page on nostter",
    "short_name": "Post Nostter",
    "manifest_version": 2,
    "version": "1.0",
    "browser_action": {
        "default_title": "title"
    },
    "background": {
        "scripts": ["background.js"],
        "persistant": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["main.js"]
        }
    ],
    "permissions": [
        "tabs"
    ]
}